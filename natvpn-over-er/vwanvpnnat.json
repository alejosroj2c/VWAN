  "parameters": {
    "vpngwname": {
      "type": "string",
      "defaultValue": "vhub1-vpngw"
    },
    "overlapiprange": {
      "type": "string",
      "defaultValue": "10.3.0.0/24"
    },
    "spoke4natrange": {
      "type": "string",
      "defaultValue": "100.64.1.0/24"
    },
    "extbranchrange": {
      "type": "string",
      "defaultValue": "100.64.2.0/24"
    },
    "vhubnatname": {
      "type": "string",
      "defaultValue": "vhub"
    },
    "extbranchnatname": {
      "type": "string",
      "defaultValue": "extbranch"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "vpngwid": {
      "type": "string",
      "defaultValue": "[resourceId('Microsoft.Network/vpnGateways', 'vhub1-vpngw')]"
    },
    "vhubname": {
      "type": "string",
      "defaultValue": "vhub1"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/vpnGateways",
      "apiVersion": "2022-07-01",
      "name": "[parameters('vpngwname')]",
      "location": "[parameters('location')]",
      "properties": {
        "virtualHub": {
          "id": "[resourceId('Microsoft.Network/virtualHubs', parameters('vhubname'))]"
