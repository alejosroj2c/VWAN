        "enableBgpRouteTranslationForNat": true,
        "natRules": [
          {
            "name": "[parameters('vhubnatname')]",
            "id": "[format('{0}/natRules/{1}', parameters('vpngwid'), parameters('vhubnatname'))]",
            "properties": {
              "type": "Static",
              "mode": "EgressSnat",
              "internalMappings": [
